# --- Ollama settings ---
# OLLAMA_BASE_URL should point to the ollama service within the Docker network
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen3:8b

# --- API server settings ---
API_HOST=0.0.0.0
API_PORT=8000
UVICORN_WORKERS=1

# --- Database settings ---
DATABASE_URL=postgresql+psycopg://user:password@db:5432/pvt-llm-api
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=pvt-llm-api

# --- Test database ---
POSTGRES_USER_TEST=user
POSTGRES_PASSWORD_TEST=password
POSTGRES_DB_TEST=pvt-llm-api-test

# --- Entrypoint script settings ---
RETRIES=30
SLEEP_SECONDS=2
